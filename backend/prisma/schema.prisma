generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Claim {
  id              String    @id @default(uuid())
  userId          String
  amount          Float
  transactionDate DateTime
  description     String
  status          String?   @default("PENDING") // APPROVED, REJECTED, etc.
  receiptPath     String // File path for the receipt
  categoryId      String // Category of the claim (e.g., Travel, Medical, etc.)
  subcategoryId   String // Subcategory for finer granularity
  rejectionReason String? // Reason for rejection if applicable
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @updatedAt
}
