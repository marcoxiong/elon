{
  "editor.formatOnSave": true, // Auto format on save
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier as default formatter
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier for TypeScript
  },
  "eslint.validate": ["javascript", "typescript"], // Enable ESLint for these languages
  "editor.codeActionsOnSave": {
    "source.fixAll": "always", // Fix all fixable issues on save
    "source.organizeImports": "always" // Organize imports on save
  }
}
